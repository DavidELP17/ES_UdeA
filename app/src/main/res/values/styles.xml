<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.ESUdeA" parent="Base.Theme.ESUdeA">
    </style>

    <!-- Base application theme. -->
    <!-- <style name="Base.Theme.ESUdeA" parent="android:Theme.Holo"> -->
    <style name="Base.Theme.ESUdeA" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_margin_leftright</item>
        <item name="android:paddingRight">@dimen/card_margin_leftright</item>
        <item name="android:paddingTop">@dimen/card_margin_topbottom</item>
        <item name="android:paddingBottom">@dimen/card_margin_topbottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Theme.ESUdeA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ESUdeA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ESUdeA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ESUdeA.FullScreen" parent="android:Theme.Black.NoTitleBar.Fullscreen"/>

    <style name="TranslucentDarkActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#99000000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Linea divisora entre elementos para RecyclerView -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
