<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="vertical"
            android:background="@drawable/side_nav_bar"
            >

            <ImageView
                android:id="@+id/imagenhome"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:background="@drawable/universidad_1"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@color/Blanco"
                android:paddingBottom="15dp"
                android:text="@string/element_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imagenhome"
                android:layout_toRightOf="@+id/imagenhome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView"
                android:textSize="15sp"
                android:text=" "/>

            <TextView
                android:id="@+id/textView_lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/Lugar"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/textView_hora"
                android:layout_toRightOf="@+id/imagenhome"
                android:textSize="14dp"
                android:textStyle="italic"
                android:layout_alignRight="@+id/textView_hora"
                android:layout_alignEnd="@+id/textView_hora" />

            <TextView
                android:id="@+id/textView_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/Hora"
                android:layout_below="@+id/textView"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/imagenhome"
                android:textStyle="italic"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView" />

            <TextView
                android:id="@+id/textView_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="4dp"
                android:paddingTop="10dp"
                android:text="@string/Fecha"
                android:layout_below="@+id/textView_lugar"
                android:layout_alignLeft="@+id/textView_lugar"
                android:layout_alignStart="@+id/textView_lugar"
                android:textStyle="bold"
                android:layout_alignRight="@+id/textView_lugar"
                android:layout_alignEnd="@+id/textView_lugar" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>